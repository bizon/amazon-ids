{
  "name": "@bizon/amazon-ids",
  "version": "2.6.0",
  "description": "Collection of Amazon identifiers",
  "main": "index.js",
  "repository": "https://github.com/bizon/amazon-ids",
  "author": "Bertrand Marron <bertrand.marron@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "marketplaces.json"
  ],
  "types": "index.d.ts",
  "dependencies": {
    "memoizee": "^0.4.14"
  },
  "devDependencies": {
    "@bizon/semantic-release-config": "^1.0.1",
    "jest": "^27.0.1",
    "jest-junit": "^12.2.0",
    "semantic-release": "^17.4.7",
    "xo": "^0.44.0"
  },
  "keywords": [
    "amazon",
    "sellercentral",
    "vendorcentral",
    "marketplaces"
  ],
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/__tests__/**/*.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "index.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "rules": {
      "unicorn/prefer-module": "off"
    },
    "overrides": [
      {
        "files": "__tests__/**/*.js",
        "envs": [
          "jest"
        ]
      }
    ]
  },
  "release": {
    "extends": "@bizon/semantic-release-config"
  }
}
